S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=llmaixweb
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ───────── OpenAI (optional) ─────────
OPENAI_API_KEY=
OPENAI_API_BASE=
OPENAI_API_MODEL=
